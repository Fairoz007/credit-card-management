<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include custom styles for credit card UI -->
    <link rel="stylesheet" href="/custom-credit-card.css">
</head>
<body class="container">
    <!-- User Greeting -->
    <h1 class="my-3">Welcome, <%= user.displayName %>!</h1>
    <p>Your email: <%= user.email %></p>

    <!-- Credit Cards Section -->
    <h2 class="my-4">Your Credit Cards</h2>
    <% if (cards && cards.length === 0) { %>
        <p>You have no credit cards added yet.</p>
    <% } else { %>
        <ul class="list-group">
            <% cards.forEach(card => { %>
                <li class="list-group-item">
                    <strong><%= card.cardType %>:</strong> 
                    Balance: $<%= card.balance.toFixed(2) %> | 
                    Limit: $<%= card.limit.toFixed(2) %> | 
                    Due Date: <%= new Date(card.dueDate).toDateString() %>
                </li>
            <% }) %>
        </ul>
    <% } %>

    <!-- Add Credit Card Form -->
    <h2 class="my-4">Add a New Credit Card</h2>
    <div class="checkout">
      <div class="credit-card-box">
        <div class="flip">
          <div class="front">
            <div class="chip"></div>
            <div class="logo">
              <!-- SVG for logo -->
              <svg width="47.834px" height="47.834px" viewBox="0 0 47.834 47.834">
                <!-- SVG Path for the card logo -->
              </svg>
            </div>
            <div class="number"></div>
            <div class="card-holder">
              <label>Card holder</label>
              <div></div>
            </div>
            <div class="card-expiration-date">
              <label>Expires</label>
              <div></div>
            </div>
          </div>
          <div class="back">
            <div class="strip"></div>
            <div class="ccv">
              <label>CCV</label>
              <div></div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Form to add new credit card -->
      <form class="form" action="/cards/add" method="POST" autocomplete="off" novalidate>
        <fieldset>
          <label for="card-number">Card Number</label>
          <input type="num" id="card-number" class="input-cart-number" maxlength="4" />
          <input type="num" id="card-number-1" class="input-cart-number" maxlength="4" />
          <input type="num" id="card-number-2" class="input-cart-number" maxlength="4" />
          <input type="num" id="card-number-3" class="input-cart-number" maxlength="4" />
        </fieldset>
        <fieldset>
          <label for="card-holder">Card holder</label>
          <input type="text" id="card-holder" name="cardType" placeholder="Card Type (e.g., Visa, Mastercard)" required>
        </fieldset>
        <fieldset class="fieldset-expiration">
          <label for="card-expiration-month">Expiration date</label>
          <div class="select">
            <select id="card-expiration-month" name="month">
              <!-- Option values for months -->
              <option>01</option>
              <option>02</option>
              <!-- Add other months -->
            </select>
          </div>
          <div class="select">
            <select id="card-expiration-year" name="year">
              <!-- Option values for years -->
              <option>2024</option>
              <option>2025</option>
              <!-- Add other years -->
            </select>
          </div>
        </fieldset>
        <fieldset class="fieldset-ccv">
          <label for="card-ccv">CCV</label>
          <input type="text" id="card-ccv" name="ccv" maxlength="3" required>
        </fieldset>
        <button type="submit" class="btn"><i class="fa fa-lock"></i> Add Credit Card</button>
      </form>
    </div>

    <!-- Spending Overview Chart -->
    <h2 class="my-4">Spending Overview</h2>
    <canvas id="spendingChart" width="400" height="200"></canvas>

    <!-- Logout Button -->
    <a href="/logout" class="btn btn-danger mt-3">Logout</a>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="dashboard.js"></script>
    <script>
        // Check if spendingData is available to avoid errors if empty
        <% if (spendingData && spendingData.data && spendingData.data.length > 0) { %>
            const ctx = document.getElementById('spendingChart').getContext('2d');
            const spendingData = <%= JSON.stringify(spendingData) %>;

            const spendingChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: spendingData.labels,
                    datasets: [{
                        label: 'Spending by Category',
                        data: spendingData.data,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        <% } %>
    </script>
</body>
</html>
